
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Admin.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Dashboard.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/ProductGrid.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/AddProduct.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/InventoryCSS.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/FeedbackCSS.css")" />
    <link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Admin</title>
</head>
<body>
    <Section class="admin">
        <div class="main-container">
            <div class="sidebar">
                <div class="title"><i class="fa-solid fa-user-gear"></i><span>Admin</span></div>
                <hr>
                <ul>
                    <a href="@Url.Action("Dashboard", "Admin")">
                    <li id="panelList1"><div><i class="fa-solid fa-border-all"></i></div><span>Dashboard</span></li></a>
                    <a href="@Url.Action("ProductGrid", "Admin")">
                    <li id="panelList2"><div><i class="fa-solid fa-box-archive"></i></div><span>Products</span></li></a>
                    <a href="@Url.Action("Customers", "Admin")">
                    <li id="panelList3"><div><i class="fa-solid fa-user-group"></i></div><span>Customers</span></li></a>
                    <a href="@Url.Action("Order", "Admin")">
                    <li id="panelList4"><div><i class="fa-solid fa-cart-shopping"></i></div><span>Orders</span></li></a>
                    <a href="@Url.Action("Inventory", "Admin")">
                    <li id="panelList5"><div><i class="fa-solid fa-warehouse"></i></div><span>Inventory</span></li></a>
                    <a href="@Url.Action("Transaction", "Admin")">
                    <li id="panelList6"><div><i class="fa-solid fa-arrow-right-arrow-left"></i></div><span>Transactions</span></li></a>
                    <a href="@Url.Action("Feedback", "Admin")">
                    <li id="panelList7"><div><i class="fa-solid fa-comments"></i></div><span>FeedBacks</span></li></a>
                </ul>
                <hr>
                <a href="@Url.Action("Signout", "User")">
                    <div class="logout"><button class="btn">Logout</button></div>
                </a>
            </div>
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </Section>
    <script>
        var val = '@Html.Raw(ViewBag.SelectedList)';
        console.log(val, typeof(val))
        document.getElementById(val).classList.add("hoverWhenCLicked")
    </script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".datatable").dataTable();
        })
    </script>

</body>



</html>
